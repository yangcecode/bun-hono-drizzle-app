{
  "name": "bun-hono-drizzle-app",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply my_db --remote",
    "db:migrate:local": "wrangler d1 migrations apply my_db --local",
    "typecheck": "bunx tsc --noEmit"
  },
  "dependencies": { 
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260113.0",
    "wrangler": "^4.4.0"
  }
}